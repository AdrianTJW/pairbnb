<!DOCTYPE html>
<html>
<head>
  <title>Pairbnb</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>
<body>
  <nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">Pairbnb</a>
    </div>



    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <li>
          <% if Clearance.configuration.allow_sign_up? %>
            <%= link_to t(".sign_up"), sign_up_path %>
          <% end %>
        </li>
        <li>
        <% if current_user %>
          Welcome <strong><%= current_user.name %></strong>!
          <%= link_to "Sign out", signout_path, id: "sign_out"%>
        <% else %>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" role="button">Sign in<span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Sign in from Facebook", "/auth/facebook", id: "sign_in"%></li>
              <li><%= link_to "Sign in using email", sign_in_path%></li>
            </ul>
          </li>
        <% end %>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

     

    	<div id="user-widget">
        <% if current_user %>
          Welcome <strong><%= current_user.name %></strong>!
            <%= link_to "Sign out", signout_path, id: "sign_out"%>
          <%= link_to "Sign out", sign_out_path, method: :delete%>
        <% else %>
          <%= link_to "Sign in from Facebook", "/auth/facebook", id: "sign_in"%>
          <%= link_to "Sign in", sign_in_path%>
        <% end %>
      </div>

      <div id="flash">
        <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>
      </div>

<%= yield %>

</body>
</html>
