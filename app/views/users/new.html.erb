<h1>Sign up</h1>

<%= form_for(@user) do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %><br>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %><br>

  <%= f.label :email %>
  <%= f.email_field :email %><br>

  <%= f.label :encrypted_password %>
  <%= f.password_field :encrypted_password %><br>

  <%= f.submit "Create my account" %>
<% end %>